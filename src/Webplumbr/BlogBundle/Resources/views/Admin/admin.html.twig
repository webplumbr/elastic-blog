<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ blog_title }}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        {% stylesheets
                'bundles/webplumbrblog/css/*.min.css'
                'bundles/webplumbrblog/css/3_dashboard.css'
        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ url('blog_index') }}" target="_blank">{{ blog_title }}</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ url('admin_dashboard') }}">Dashboard</a></li>
                        <li><a href="{{ url('admin_settings') }}">Settings</a></li>
                        <li><a href="{{ url('logout') }}">Logout</a></li>
                    </ul>
                    <form class="navbar-form navbar-right" action="{{ url('admin_search') }}" method="get">
                        <input type="text" name="query" class="form-control" placeholder="Search Posts...">
                    </form>
                </div>
            </div>
        </nav>

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3 col-md-2 sidebar">
                    <ul class="nav nav-sidebar">
                        <!-- <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li> -->
                        <li><a href="{{ url('listing_posts') }}">Posts</a></li>
                        <li><a href="{{ url('listing_tags') }}">Tags</a></li>
                        <li><a href="{{ url('listing_comments') }}">Comments</a></li>
                        <li><a href="{{ url('listing_users') }}">Users</a></li>
                        <li><a href="{{ url('import_wordpress_blog') }}">Import Wordpress Blog</a></li>
                    </ul>
                </div>
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                    <h1 class="page-header">{% block page_title %}{% endblock %}</h1>
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        <!-- placed towards the end to help load the page faster -->

        {% javascripts 'bundles/webplumbrblog/js/*.min.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% block javascripts %}{% endblock %}
    </body>
</html>
